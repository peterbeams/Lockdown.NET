@{
    ViewBag.Title = "Roles";
}

<h2>Setup Roles</h2>

<div class="row">
    <div class="span4">
        <a href="#" class="btn btn-primary"><i class="icon-plus icon-white"></i> New Role</a>
        
        <h3>Roles</h3>
        <ul class="unstyled">
            <li><i class="icon-circle-arrow-right"></i> @Html.ActionLink("Administrator", "EditRole", new { }, new { @class = "" })</li>
            <li><i class="icon-circle-arrow-right"></i> @Html.ActionLink("Super User", "EditRole", new {}, new { @class = "" } )</li>
            <li><i class="icon-circle-arrow-right"></i> @Html.ActionLink("User", "EditRole", new { }, new { @class = "" })</li>
            <li><i class="icon-circle-arrow-right"></i> @Html.ActionLink("Guest User", "EditRole", new { }, new { @class = "" })</li>
        </ul>
    </div>
    <div class="span8">
        <form>
            <fieldset>
                <legend>Edit Role</legend>
                
                <label class="control-label" for="Name">Name</label>
                <input type="text" id="Name" placeholder="Name" />

                <div class="form-actions">
                  <button type="submit" class="btn btn-primary">Save changes</button>
                  <button type="button" class="btn">Cancel</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
